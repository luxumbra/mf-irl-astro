---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero, { HeroProps } from '~/components/widgets/Hero.astro';
import About from '~/components/sections/About.astro';
import Location from '~/components/sections/Location.astro';
import Program from '~/components/sections/Program.astro';
import Speakers from '~/components/sections/Speakers.astro';
import Sponsors from '~/components/sections/Sponsors.astro';
import Join from '~/components/sections/Join.astro';
import ThreeD from '~/components/widgets/ThreeD';

const meta = {
  title: SITE.title,
  description: SITE.description,
  canonical: getCanonical(getHomePermalink()),
};

const heroCopy: HeroProps = {
  titleLn1: 'A bit of a conference,',
  titleLn2: 'a bit of a festival',
  subtitle: '+ a shitload of fun',
  ctaUrl: '/#join',
  dates: '16 - 18 August',
};
---

<Layout {meta}>
  <Hero
    titleLn1={heroCopy.titleLn1}
    titleLn2={heroCopy.titleLn2}
    subtitle={heroCopy.subtitle}
    ctaUrl={heroCopy.ctaUrl}
    dates={heroCopy.dates}
  />
  <About />
  <Location />
  <Program />
  <Speakers />
  <Sponsors />
  <Join />
  <ThreeD client:load />
</Layout>

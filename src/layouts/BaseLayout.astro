---
import '~/assets/styles/index.css';

import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Toolbar from '~/components/widgets/Toolbar.astro';

import MetaTags from '~/components/core/MetaTags.astro';
import BasicScripts from '~/components/core/BasicScripts.astro';

const { meta = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth bg-secondary">
	<head>
		<MetaTags {...meta} />
	</head>

	<body class="antialiased text-gray-900 dark:text-accent tracking-normal">
		<Header />
		<Toolbar />
		<slot />
		<Footer />
		<BasicScripts />
		<style is:global>
			img {
				content-visibility: auto;
			}
		</style>
		<div class="page-bg" />
	</body>
</html>

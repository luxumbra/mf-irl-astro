<AstroSeo
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  nofollow={nofollow}
  openGraph={{
    url: canonical,
    title: ogTitle,
    description: description,
    type: ogType,
    images: image ? [{ url: image.href }] : undefined,
  }}
  twitter={{
    handle: "@MetaFam",
    // site: '@site',
    cardType: image ? "summary_large_image" : undefined,
  }}

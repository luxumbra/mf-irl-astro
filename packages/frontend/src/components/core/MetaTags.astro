---
import { AstroSeo } from '@astrolib/seo';
// import { GoogleAnalytics } from '@astrolib/analytics';
import { getImage } from '@astrojs/image';
import { getRelativeUrlByFilePath } from '~/utils/directories';

import defaultImageSrc from '~/assets/images/socials/metafest-shared.jpg';

import { SITE, HOSTNAME, FACEBOOK_PIXEL_ID } from '~/config.mjs';
import Fonts from '~/components/atoms/Fonts.astro';
import ExtraMetaTags from '~/components/atoms/ExtraMetaTags.astro';

const { src: defaultImage } = await getImage({
  src: defaultImageSrc,
  alt: SITE.name,
  width: 1200,
  height: 630,
});

const {
  title = SITE.name,
  description = '',
  image: _image = defaultImage,

  canonical,
  noindex = false,
  nofollow = false,

  ogTitle = title,
  ogType = 'website',
} = Astro.props;

const image =
  typeof _image === 'string'
    ? new URL(_image, HOSTNAME)
    : _image && typeof _image['src'] !== 'undefined'
    ? new URL(getRelativeUrlByFilePath(_image.src), HOSTNAME)
    : null;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<!-- Fathom - beautiful, simple website analytics -->
<script src="https://cdn.usefathom.com/script.js" data-site="VHJSDIIW" defer></script>
<!-- / Fathom -->

<!-- Facebook Pixel Code -->
<script>!function(f,b,e,v,n,t,s){if(f.fbq)return;n=f.fbq=function(){n.callMethod?n.callMethod.apply(n,arguments):n.queue.push(arguments)};if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';n.queue=[];t=b.createElement(e);t.async=!0;t.src=v;s=b.getElementsByTagName(e)[0];s.parentNode.insertBefore(t,s)}(window,document,'script','https://connect.facebook.net/en_US/fbevents.js'); fbq('init', '6654311354625109'); fbq('track', 'PageView');</script>
<noscript> <img height="1" width="1" src={`https://www.facebook.com/tr?id=6654311354625109&ev=PageView&noscript=1`} /></noscript>
<!-- End Facebook Pixel Code -->

<AstroSeo
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  nofollow={nofollow}
  openGraph={{
    url: canonical,
    title: ogTitle,
    description: description,
    type: ogType,
    images: image ? [{ url: image.href }] : undefined,
  }}
  twitter={{
    handle: '@MetaFam',
    // site: '@site',
    cardType: image ? 'summary_large_image' : undefined,
  }}
/>

<Fonts />

<!-- Google Site Verification -->
<!-- {SITE.googleSiteVerificationId && <meta name="google-site-verification" content={SITE.googleSiteVerificationId} />} -->

<!-- Google Analytics -->
<!-- {SITE.googleAnalyticsId && <GoogleAnalytics id={String(SITE.googleAnalyticsId)} partytown={true} />} -->

<ExtraMetaTags />

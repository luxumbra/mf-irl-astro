{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro", // Enable .astro
    "typescript", // Enable .ts
    "typescriptreact" // Enable .tsx
  ],
  "prettier.documentSelectors": ["**/*.astro"],
  "editor.codeActionsOnSave": {
    "source.formatDocument": true,
    "source.fixAll": true
},
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
